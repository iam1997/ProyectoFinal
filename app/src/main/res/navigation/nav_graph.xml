<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.proyectofinal.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_crearCuentaFragment"
            app:destination="@id/crearCuentaFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/crearCuentaFragment"
        android:name="com.example.proyectofinal.CrearCuentaFragment"
        android:label="fragment_crear_cuenta"
        tools:layout="@layout/fragment_crear_cuenta" >
        <action
            android:id="@+id/action_crearCuentaFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.proyectofinal.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_recursosFragment"
            app:destination="@id/recursosFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aprendeFragment"
            app:destination="@id/aprendeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_leccionesFavFragment"
            app:destination="@id/leccionesFavFragment" />
    </fragment>
    <fragment
        android:id="@+id/recursosFragment"
        android:name="com.example.proyectofinal.RecursosFragment"
        android:label="fragment_recursos"
        tools:layout="@layout/fragment_recursos" >
        <action
            android:id="@+id/action_recursosFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/aprendeFragment"
        android:name="com.example.proyectofinal.AprendeFragment"
        android:label="AprendeFragment" >
        <action
            android:id="@+id/action_aprendeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/leccionesFavFragment"
        android:name="com.example.proyectofinal.LeccionesFavFragment"
        android:label="LeccionesFavFragment" >
        <action
            android:id="@+id/action_leccionesFavFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>