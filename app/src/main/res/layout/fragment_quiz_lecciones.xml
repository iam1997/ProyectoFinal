<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizLeccionesFragment">

    <TextView
        android:id="@+id/textView_leccionesQuizLecciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Lecciones"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/primaryDarkColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewQuizLecciones"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="@id/textView_leccionesQuizLecciones"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_leccion1QuizLecciones"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="25dp"
                android:text="ABCDario"
                app:backgroundTint="@color/white"
                app:cornerRadius="25dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scrollViewQuizLecciones" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_leccion2QuizLecciones"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="50dp"
                android:text="Colores"
                app:backgroundTint="@color/white"
                app:cornerRadius="25dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_leccion1QuizLecciones" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_leccion3QuizLecciones"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="50dp"
                android:text="Calendario"
                app:backgroundTint="@color/white"
                app:cornerRadius="25dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_leccion2QuizLecciones" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_leccion4QuizLecciones"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="50dp"
                android:text="Cuerpo humano"
                app:backgroundTint="@color/white"
                app:cornerRadius="25dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_leccion3QuizLecciones" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_leccion5QuizLecciones"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="50dp"
                android:text="Adjetivos, pronombres, preposiciones y artÃ­culos"
                app:backgroundTint="@color/white"
                app:cornerRadius="25dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_leccion4QuizLecciones" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_volverQuizLecciones"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Volver"
        app:backgroundTint="@color/white"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>